V = read($1,rows=$2,cols=$3);
n = $3;

R1 = matrix(0,rows=1,cols=n); 
R2 = matrix(0,rows=1,cols=n); 
dummy = matrix(1,rows=1, cols=1);

parfor( i in 1:n, par=4, mode=LOCAL, datapartitioner=LOCAL, opt=NONE )
{
   X = V[,i];                 
   sX = sum(X);
   R1[1,i] = dummy * sX; 
}

parfor( i in 1:n, par=4, mode=LOCAL, datapartitioner=LOCAL, opt=NONE )
{
   X1 = V[i,];
   X2 = V[,i];                 
   sX1 = sum(X1);
   sX2 = sum(X2);
   R2[1,i] = R1[1,i]+sX1+sX2; 
}   

write(R2, $4);       